{
    "manifest_version": 3,
    "name": "Focus Mode",
    "description": "Enable reading mode on Chrome's official Extensions and Chrome Web Store documentation.",
    "version": "1.0",
    "icons": {
        "16": "images/flower_16.png",
        "32": "images/flower_32.png",
        "48": "images/flower_64.png",
        "128": "images/flower_128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": {
            "16": "images/flower_16.png",
            "32": "images/flower_32.png",
            "48": "images/flower_64.png",
            "128": "images/flower_128.png"
        }
    },
    "permissions": ["activeTab", "scripting"],
    "commands": {
        "_execute_action": {
          "suggested_key": {
            "default": "Ctrl+Z",
            "mac": "Command+Z"
          }
        }
      }
    }