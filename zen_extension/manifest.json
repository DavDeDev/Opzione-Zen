{
    "manifest_version": 3,
    "name": "Opzione Zen",
    "description": "Enable reading mode in most popular documentation websites",
    "version": "0.9.9.9",
    "icons": {
        "16": "images/flower_16.png",
        "32": "images/flower_32.png",
        "48": "images/flower_64.png",
        "128": "images/flower_128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": {
            "16": "images/flower_16.png",
            "32": "images/flower_32.png",
            "48": "images/flower_64.png",
            "128": "images/flower_128.png"
        }
    },
    "permissions": ["activeTab", "scripting"],
    "commands": {
        "_execute_action": {
          "suggested_key": {
            "windows": "Ctrl+Shift+Y",
            "mac": "Command+Z"
          }
        }
      }
    }